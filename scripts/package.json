{
  "name": "@mx-design/release",
  "version": "0.0.1",
  "description": "Lightweight release script for Front-end project",
  "keywords": [
    "mx-release",
    "mx release",
    "release script"
  ],
  "license": "MIT",
  "author": "1334196450@qq.com",
  "typings": "types/index.d.ts",
  "files": [
    "lib",
    "bin",
    "types"
  ],
  "scripts": {
    "build:types": "rimraf types && tsc --outFile types/index.d.ts -d --emitDeclarationOnly",
    "build:lib": "rimraf lib && babel src --extensions .ts --out-dir lib --copy-files",
    "build": "yarn build:types && yarn build:lib"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "inquirer": "8.2.0",
    "rimraf": "^3.0.2",
    "semver": "7.3.5",
    "typescript": "^4.5.4",
    "conventional-changelog-cli": "^2.2.2"
  }
}
