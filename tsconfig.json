{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./type",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["webpack", "node", "jest"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "es", "**/__tests__/**", "tests"]
}
