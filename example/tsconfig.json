{
    "compilerOptions": {
      "baseUrl": "./",
      "target": "ES2019",
      "module": "es6",
      "moduleResolution": "node",
      "lib": ["es5", "dom"],
      "importHelpers": true,
      "jsx": "react",
      "resolveJsonModule": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "types": ["webpack", "node", "jest"]
    },
    "include": ["src", "components"],
    "exclude": ["node_modules", "lib", "es", "**/__tests__/**", "tests"]
  }
  